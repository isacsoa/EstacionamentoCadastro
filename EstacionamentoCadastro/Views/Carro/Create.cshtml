@model CarroViewModel
@{
    ViewBag.Title = "Cadastro de CArros";
}

@using (Html.BeginForm("Create", "Carro", FormMethod.Post, new { @id = "formCarro", enctype = "multipart /form-data" }))
{
    <div class="row">
        <div class="col-md-12">
            <ol class="breadcrumb pull-right">
                <li><a href="/Carro">Carro</a></li>
                <li class="active">Incluir</li>
            </ol>
            <h3 class="page-header">Carros <small>Cadastro de carros.</small></h3>
        </div>
        <div class="col-md-12">
            <div class="panel panel-inverse Shadow" data-sortable-id="form-validation-1">
                <div class="well">
                    <div id="step1" role="tabpanel" class="bwizard-activated" aria-hidden="false">
                        <fieldset>
                            <legend class="pull-left width-full">
                                Incluir
                            </legend>
                            <div class="row" style="display:block !important">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Marca: </label>
                                        @Html.TextBoxFor(x => x.Marca, new { @Class = "form-control", @maxlength = "100" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Modelo: </label>
                                        @Html.TextBoxFor(x => x.Modelo, new { @Class = "form-control", @maxlength = "100" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Placa: </label>
                                        @Html.TextBoxFor(x => x.Placa, new { @Class = "form-control", @maxlength = "7" })
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <hr />
                        <div class="row">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary m-r-5 m-b-5">
                                    <i class="fa fa-plus"></i>
                                    Incluir
                                </button>
                                <a href="@Url.Action("Index", "Carro")" class="btn btn-default m-r-5 m-b-5">
                                    <i class="fa fa-reply-all"></i>
                                    Voltar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts{
    <script src="~/js/View/Carro/create.js"></script>
}