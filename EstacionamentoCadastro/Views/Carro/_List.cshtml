@model PagedList.Core.IPagedList<CarroViewModel>

@if (Model.Count > 0)
{
    @Html.Hidden("Pagina")
    @Html.Hidden("Ordenacao")
    @Html.Hidden("OrdenacaoDirecao")
    <div class="table-responsive">
        <table class="table table-striped table-bordered TableSearch" id="perfis">
            <thead>
                <tr>
                    <th>Marca</th>
                    <th>Modelo</th>
                    <th>Placa</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Placa</td>
                    <td class="col-md-1">
                        <a href="@Url.Action("Edit", "Carro", new { id = item.Id })" class="btn btn-sm btn-info"><i class="fa fa-pencil-square-o fa-fw"></i>Editar</a>
                    </td>
                    <td class="col-md-1">
                        <a href="@Url.Action("Excluir", "Carro", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-plus"></i>Excluir</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <pager list="@Model" />
    </div>
}
else
{
    <div class="col-md-12 text-center">
        Não há Carros
    </div>
}
