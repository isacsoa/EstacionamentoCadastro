@model CarroViewModel
@{
    ViewBag.Title = "Lista";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb pull-right">
            <li><a href="javascript:;">Carros</a></li>
            <li class="active">Listar</li>
        </ol>
        <h3 class="page-header">Carros <small>Lista de carros.</small></h3>
    </div>
    <div class="col-md-12">
        <div class="panel panel-inverse Shadow" data-sortable-id="form-validation-1">
            <div class="well">
                <div id="step1" role="tabpanel" class="bwizard-activated" aria-hidden="false">
                    <fieldset>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="well" style="padding: 4px;">
                                    <a href="@Url.Action("Create", "Carro")" class="btn btn-primary"><i class="fa fa-plus"></i> Novo</a>
                                </div>
                            </div>
                        </div>                        
                        <div id="lista-Carros" class="panel-loading">@*<span class="spinner-small"></span>*@</div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/View/Carro/Index.js"></script>
}